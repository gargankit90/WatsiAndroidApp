<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="watsiTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/watsiActionBar</item>
    </style>
    <style name="watsiActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/watsi_blue</item>
        <item name="android:titleTextStyle">@style/watsiActionBar.TitleTextStyle</item>
    	<item name="android:actionMenuTextColor">@android:color/white</item>
    </style>
    <style name="watsiActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    	<item name="android:textColor">@android:color/white</item>
        <item name="android:icon">@drawable/ic_launcher</item>
  	</style>
  	
</resources>
