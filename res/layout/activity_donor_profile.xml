<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp" >

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/profile_img" />

    <TextView
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/profilePic"
        android:text="Rutvij Shah"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_membersince_dt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_membersince"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/tv_membersince"
        android:text="8 Nov 2012"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_membersince"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullname"
        android:layout_toRightOf="@+id/profilePic"
        android:text="Member since"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_treatmentsfunded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_membersince"
        android:layout_toRightOf="@+id/profilePic"
        android:text="Treatments Funded"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_no_of_treatmentsfunded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_membersince_dt"
        android:layout_toRightOf="@+id/tv_treatmentsfunded"
        android:text="18"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <View
        android:id="@+id/divider_up"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/profilePic"
        android:layout_marginTop="19dp"
        android:background="@android:color/darker_gray" />

    <View
        android:id="@+id/divder_down"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/divider_up"
        android:layout_marginTop="56dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/funded_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/divider_up"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    
    
        <View
            android:id="@+id/statsDivider"
            android:layout_width="1dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray" />
</RelativeLayout>