<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/profile_img" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivPhoto"
            android:layout_toRightOf="@+id/ivPhoto"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 			android:layout_below="@+id/tvName"
 			android:layout_alignLeft="@+id/tvName"
            android:layout_toRightOf="@+id/ivPhoto"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="" />



        <TextView
            android:id="@+id/tvDonationStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvName"
            android:layout_below="@+id/pbDonationProgress"
            android:layout_toRightOf="@id/ivPhoto"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="" />

        <ProgressBar
            android:id="@+id/pbDonationProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvName"
            android:layout_below="@+id/tvAge" 
            android:layout_toRightOf="@id/ivPhoto"/>
           
        <View
         android:id="@+id/borderAbovePatientNeed"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ivPhoto"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvPatientNeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/borderAbovePatientNeed"
            android:layout_alignLeft="@+id/ivPhoto"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="5dp"
            android:text="" />
        <View
         android:id="@+id/borderAboveLocation"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvPatientNeed"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray" />
        
        
        
        <TextView
            android:id="@+id/tvLocationVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvLocationLbl"
            android:layout_alignBottom="@+id/tvLocationLbl"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tvLocationLbl"
            android:layout_below="@+id/borderAboveLocation"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="" />
        
                <View
         android:id="@+id/borderAboveMedicalPartner"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvLocationLbl"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvMedicalPartner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivPhoto"
            android:layout_below="@+id/borderAboveMedicalPartner"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lblMedicalPartner" />

        <TextView
            android:id="@+id/tvMedicalPartnerVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvMedicalPartner"
            android:layout_alignBaseline="@+id/tvMedicalPartner"
            android:layout_below="@+id/borderAboveMedicalPartner"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tvMedicalPartner"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="" />
        
                        <View
         android:id="@+id/borderAboveDescription"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvMedicalPartner"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivPhoto"
            android:layout_below="@+id/borderAboveDescription"
            android:layout_marginTop="10dp"
            android:text="" />

        <TextView
            android:id="@+id/tvDonationTogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvDonationStatus"
            android:layout_alignBottom="@+id/tvDonationStatus"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tvDonationStatus"
            android:layout_below="@id/pbDonationProgress"
			android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="" />

        <TextView
            android:id="@+id/tvLocationLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivPhoto"
            android:layout_below="@+id/borderAboveLocation"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lblLocation" />
    </RelativeLayout>

</ScrollView>